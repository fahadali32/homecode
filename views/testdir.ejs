  <body>
    <table class="table table-white">
    <% for(var i in dir){ %>
    <tr id="td<%= i %>">
     <td><a href="<%=dir[i]%>"><%= dir[i] %></td>
     <td><button onclick="Delete('<%=dir[i]%>','td<%=i%>')">delete</button></td>
    </tr>
    <% } %>
    </table>
    <script>
    async function Delete(filename,td){
    let text;
      if (confirm("Do you want to delete?") == true) {
        const todo = {
          filepath:`${filename}`
        }
        const response = await axios.post('/testdelete',todo);
        const todoItems = response.data;
        alert(todoItems)
        text = `You want's to delete ${filename} :)`;
          $(document).ready(function(){
          $(`#${td}`).remove();
          });
  
      } else {
        text = "You canceled!";
      }
      document.getElementById("demo").innerHTML = text;
    }
    
    
    </script>
    
  </body>
